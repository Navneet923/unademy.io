<!DOCTYPE html>
<html lang="en-US">

   <% include components/header %>

   <body class="size-1140">
      <!-- TOP NAV WITH LOGO -->  
      <header>
          <% include components/nav %>
      </header>

      <section>

         <div id="head" style="background: url(./img/blur.jpg);">
            <div class="line">
               <h1>My Sliders</h1>
               <a href="./createNew" class="btn btn-warning" >Create New Slider</a>
            </div>
         </div>
      
      <div  style="padding-top: 20px;">

         <div class="line">
            <div class="margin">


            <%= sliders[0] %>

                  <%for(var x=0;x < sliders.length ; x++){%>
                     <div class="col-lg-4">
                        <div class="panel panel-slider reg">
                            <form role="form" action="/editSlider" method="POST">

                                       <div class="panel-body" style="min-height: 450px;">
                                             <div class="col-lg-12">
                                                 <img src="<%= sliders[x].images[0].cloud_meta[0].url %>">
                                             </div>

                                             <div class="col-lg-12" style="padding-top: 15px;">
                                                <h5 style="display:inline;color: black;"><%= sliders[x].name %></h5> - <h6 style="display:inline;color: green;"><%= sliders[x].description %></h6>
                                                <hr>
                                             </div>

                                             <div class="col-lg-12" style="padding-bottom: 20px;">
                                                <img class="profile-img" src="/img/annon_user.jpg"
                                                   alt="">
                                                <span>Author - </span>
                                                <h3 style="color: black;"><a><%= sliders[x].author %></a></h3>
                                             </div>
                                       </div>
                                       <input type="text" name="id" value="<%= sliders[x]._id %>" style='display: none;'>
                                       <div class="panel-footer" style="background-color: black;">
                                          <button class="btn btn-primary btn-lrg" style="background-color: red;font-size: 10px;" type="submit">E D I T</button>
                                       </div>   
                           </form> 
                        </div>
                     </div>
                  <%}%>
                     
                 
               

            </div>
         </div>


       


       
</section>

      <% include components/footer %>
      <% include components/carScript %>
    
   </body>

</html>