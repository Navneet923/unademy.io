        <script src="../javascripts/addSectionToSlider.js"></script>
        <script src="../javascripts/add-slide.js"></script>

      

      <script src="../javascripts/youtubeLogic.js"></script>
      <script src="../javascripts/remDelSlides.js"></script>



        <script src="../javascripts/save-slide.js"></script>
